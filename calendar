  <footer>
    <p><strong>Tip:</strong> Checkboxes are saved to your browser (local only). You can print this page or publish it as a static HTML anywhere (GitHub Pages, your website, or a file share).</p>
  </footer>

  <script>
    // Persist task state to localStorage and update progress bar
    const tasks = Array.from(document.querySelectorAll('.task input[type="checkbox"]'));
    const bar = document.getElementById('bar');
    const pct = document.getElementById('pct');
    const doneCount = document.getElementById('doneCount');

    const KEY = 'capitals-wilderness-timeline-v1';
    const saved = JSON.parse(localStorage.getItem(KEY) || '{}');

    tasks.forEach(cb => {
      if (saved[cb.id]) cb.checked = true;
      cb.addEventListener('change', () => {
        saved[cb.id] = cb.checked;
        localStorage.setItem(KEY, JSON.stringify(saved));
        render();
      });
    });

    function render(){
      const total = tasks.length;
      const done = tasks.filter(t => t.checked).length;
      const percent = Math.round((done/total)*100);
      bar.style.width = percent + '%';
      pct.textContent = percent + '% complete';
      doneCount.textContent = `${done} of ${total} tasks`;
    }

    render();
  </script>
